<div>
	<label for="title" class="mb-3">Title</label>
	<input class="mb-2 mt-1" required type="text" name="title" id="title" value="<%=post.title%>" />
</div>
<div>
	<label for="description">Description</label>
	<textarea class="mb-2 mt-1" type="text" name="description" id="description"><%=post.description%></textarea>
</div>
<div>
	<label for="markdown">Markdown</label>
	<textarea class="mb-2 mt-1" required type="text" name="markdown" id="markdown" rows="10"><%=post.markdown%></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button class="btn btn-primary">Save</button>
