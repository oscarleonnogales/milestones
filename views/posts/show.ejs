<div class="post__buttons-container">
	<a href="/" class="btn btn-primary">All Posts</a>
	<% if(renderButtons) {%> <%- include('../partials/_edit-delete-post-buttons.ejs', {post: post}) %> <% } %>
</div>
<div class="post__post-body-container">
	<h1 class="mb-1"><%=post.title %></h1>
	<div class="post__post-body-subtitle">
		Submitted on <%=post.createdAt.toLocaleDateString() %> by
		<a href="/users/<%=post.author.username %>"><%= post.author.username %></a>
	</div>
	<form method="POST" action="/posts/like/<%= post.id %>?_method=PUT">
		<div class="mb-1 icon-container">
			<div class="icon-container">
				<% if(currentClient && post.likes.includes(currentClient.id)) { %>
				<button type="submit" class="icon-btn">
					<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-hand-thumbs-up-fill" viewBox="0 0 16 16">
						<path
							d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.964.22.817.533 2.512.062 4.51a9.84 9.84 0 0 1 .443-.05c.713-.065 1.669-.072 2.516.21.518.173.994.68 1.2 1.273.184.532.16 1.162-.234 1.733.058.119.103.242.138.363.077.27.113.567.113.856 0 .289-.036.586-.113.856-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.162 3.162 0 0 1-.488.9c.054.153.076.313.076.465 0 .306-.089.626-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.826 4.826 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.616.849-.231 1.574-.786 2.132-1.41.56-.626.914-1.279 1.039-1.638.199-.575.356-1.54.428-2.59z"
						/>
					</svg>
				</button>
				<% } else { %>
				<button type="submit" class="icon-btn">
					<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-hand-thumbs-up" viewBox="0 0 16 16">
						<path
							d="M8.864.046C7.908-.193 7.02.53 6.956 1.466c-.072 1.051-.23 2.016-.428 2.59-.125.36-.479 1.013-1.04 1.639-.557.623-1.282 1.178-2.131 1.41C2.685 7.288 2 7.87 2 8.72v4.001c0 .845.682 1.464 1.448 1.545 1.07.114 1.564.415 2.068.723l.048.03c.272.165.578.348.97.484.397.136.861.217 1.466.217h3.5c.937 0 1.599-.477 1.934-1.064a1.86 1.86 0 0 0 .254-.912c0-.152-.023-.312-.077-.464.201-.263.38-.578.488-.901.11-.33.172-.762.004-1.149.069-.13.12-.269.159-.403.077-.27.113-.568.113-.857 0-.288-.036-.585-.113-.856a2.144 2.144 0 0 0-.138-.362 1.9 1.9 0 0 0 .234-1.734c-.206-.592-.682-1.1-1.2-1.272-.847-.282-1.803-.276-2.516-.211a9.84 9.84 0 0 0-.443.05 9.365 9.365 0 0 0-.062-4.509A1.38 1.38 0 0 0 9.125.111L8.864.046zM11.5 14.721H8c-.51 0-.863-.069-1.14-.164-.281-.097-.506-.228-.776-.393l-.04-.024c-.555-.339-1.198-.731-2.49-.868-.333-.036-.554-.29-.554-.55V8.72c0-.254.226-.543.62-.65 1.095-.3 1.977-.996 2.614-1.708.635-.71 1.064-1.475 1.238-1.978.243-.7.407-1.768.482-2.85.025-.362.36-.594.667-.518l.262.066c.16.04.258.143.288.255a8.34 8.34 0 0 1-.145 4.725.5.5 0 0 0 .595.644l.003-.001.014-.003.058-.014a8.908 8.908 0 0 1 1.036-.157c.663-.06 1.457-.054 2.11.164.175.058.45.3.57.65.107.308.087.67-.266 1.022l-.353.353.353.354c.043.043.105.141.154.315.048.167.075.37.075.581 0 .212-.027.414-.075.582-.05.174-.111.272-.154.315l-.353.353.353.354c.047.047.109.177.005.488a2.224 2.224 0 0 1-.505.805l-.353.353.353.354c.006.005.041.05.041.17a.866.866 0 0 1-.121.416c-.165.288-.503.56-1.066.56z"
						/>
					</svg>
				</button>
				<% } %>
				<span class="ml-1"><%= post.likes.length %> likes</span>
			</div>
			<div class="icon-container">
				<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-chat-square-text icon" viewBox="0 0 16 16">
					<path
						d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1h-2.5a2 2 0 0 0-1.6.8L8 14.333 6.1 11.8a2 2 0 0 0-1.6-.8H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h2.5a1 1 0 0 1 .8.4l1.9 2.533a1 1 0 0 0 1.6 0l1.9-2.533a1 1 0 0 1 .8-.4H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"
					/>
					<path
						d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"
					/>
				</svg>
				<span class="ml-1"><%= post.commentsCount %> comments</span>
			</div>
		</div>
	</form>
	<div class="post__post-markdown"><%- post.sanitizedHTML %></div>
</div>
<form action="/comments/<%= post.id %>" method="POST">
	<label for="commentText">Comment</label>
	<textarea name="commentText" id="commentText" class="mt-1 mb-2"></textarea>
	<button class="btn btn-primary" type="submit">Comment</button>
</form>
<% if(post.commentsCount > 0) { %>
<div class="post__comments-container">
	<% if(comments) {comments.forEach(comment => { %>
	<div class="post__comment">
		<div class="post__comment-author">
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="bi bi-person-circle post__comment-author-photo"
				viewBox="0 0 16 16"
			>
				<path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
				<path
					fill-rule="evenodd"
					d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"
				/>
			</svg>
			<a href="/users/<%= comment.author.username %>" class="text-muted"><%= comment.author.username %></a>
		</div>
		<div class="post__comment-content">
			<div class="post__comment-text"><%= comment.text %></div>
			<% if (locals.currentClient && (comment.author.id === currentClient.id || currentClient.role === 'admin')) { %>
			<form action="/comments/<%= comment.id %>?_method=DELETE" method="POST" class="post__comment-delete-form">
				<button type="submit" class="btn btn-danger">Delete Comment</button>
			</form>
			<% } %>
		</div>
	</div>
	<% })} %>
</div>
<% } %>
