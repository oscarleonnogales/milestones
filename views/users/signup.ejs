<script src="/scripts/signup.js" defer></script>
<% if(locals.error && error != null) { %>
<div class="d-flex justify-content-center">
	<div class="alert alert-danger">
		<svg xmlns="http://www.w3.org/2000/svg" class="bi bi-exclamation-triangle" viewBox="0 0 16 16">
			<path
				d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z"
			/>
			<path
				d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z"
			/>
		</svg>
		<%=error %>
	</div>
</div>
<% } %>
<div class="authentication-container">
	<h2 class="authentication-title">Signup Today</h2>
	<form action="/users/signup" method="POST" class="authentication-form">
		<div class="authentication-form-group">
			<label for="username" class="mb-1">Username</label>
			<div class="form-input">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="bi bi-person form-input-icon"
					viewBox="0 0 16 16"
					data-username-input-icon
				>
					<path
						d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"
					/>
				</svg>
				<input
					required
					type="text"
					id="username"
					name="username"
					class="auth-input"
					data-username-input
					value="<%= locals.currentClient ? currentClient.username : null%>"
				/>
			</div>
		</div>
		<div class="authentication-form-group">
			<label for="password" class="mb-1">Password</label>
			<div class="form-input">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="bi bi-lock form-input-icon"
					viewBox="0 0 16 16"
					data-password-input-icon
				>
					<path
						d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"
					/>
				</svg>
				<input
					required
					type="password"
					id="password"
					name="password"
					class="auth-input"
					aria-describedby="passwordHelpBlock"
					minlength="8"
					maxlength="20"
					data-signup-password-input
				/>
			</div>
			<small id="passwordHelpBlock" class="mt-1" data-password-help-block>
				Your password must be 8-20 characters long
			</small>
		</div>
		<div class="authentication-form-group">
			<label for="confirmPassword" class="mb-1">Confirm Password</label>
			<div class="form-input">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="bi bi-lock form-input-icon"
					viewBox="0 0 16 16"
					data-confirm-input-icon
				>
					<path
						d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"
					/>
				</svg>
				<input
					required
					type="password"
					id="confirmPassword"
					name="confirmPassword"
					class="auth-input"
					data-confirm-input
				/>
			</div>
		</div>
		<div class="d-flex justify-content-center mb-3">
			<a href="/" class="btn btn-secondary mr-2">Cancel</a>
			<button class="btn-primary btn" type="submit">Sign Up</button>
		</div>
	</form>
</div>

<div class="d-flex justify-content-center">
	<a href="/login" class="link">Already a member? Sign In</a>
</div>
